<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="175dp"
            android:layout_height="38dp" android:id="@+id/pokemon_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:textSize="20sp"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="105dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/pokemon_pic"
            android:layout_marginStart="56dp"
            app:layout_constraintStart_toEndOf="@+id/pokemon_name"
            app:layout_constraintTop_toTopOf="@+id/pokemon_name"
            app:layout_constraintBottom_toBottomOf="@+id/pokemon_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>