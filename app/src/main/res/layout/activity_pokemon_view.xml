<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonCreator">

    <TextView
        android:id="@+id/PokemonViewer_pokemonType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:text="Type 1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PokemonViewer_imageViewPokePic" />

    <TextView
        android:id="@+id/PokemonViewer_pokemonAbility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Ability"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PokemonViewer_pokemonType" />

    <TextView
        android:id="@+id/PokemonViewer_pokemonType2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:text="Type 2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PokemonViewer_imageViewPokePic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pokemon Viewer"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PokemonViewer_Name"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:gravity="center"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/PokemonViewer_imageViewPokePic"
        android:layout_width="137dp"
        android:layout_height="175dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/PokemonViewer_Name"
        app:layout_constraintStart_toStartOf="@+id/PokemonViewer_Name"
        app:layout_constraintTop_toBottomOf="@+id/PokemonViewer_Name"
        app:srcCompat="@drawable/pokeball"
        tools:srcCompat="@drawable/pokeball" />
</androidx.constraintlayout.widget.ConstraintLayout>