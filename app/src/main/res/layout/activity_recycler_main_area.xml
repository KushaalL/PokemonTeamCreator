<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainArea">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTeamList"
        android:layout_width="316dp"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Team List"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pokemon List"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTeamList" />

    <Button
        android:id="@+id/button_addTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewPokeList" />

    <Button
        android:id="@+id/button_addPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Pokemon"
        app:layout_constraintBottom_toBottomOf="@+id/button_addTeam"
        app:layout_constraintStart_toEndOf="@+id/button_addTeam"
        app:layout_constraintTop_toTopOf="@+id/button_addTeam" />

    <Button
        android:id="@+id/button_SignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        app:layout_constraintBottom_toBottomOf="@+id/button_addPokemon"
        app:layout_constraintStart_toEndOf="@+id/button_addPokemon"
        app:layout_constraintTop_toTopOf="@+id/button_addPokemon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPokeList"
        android:layout_width="316dp"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</androidx.constraintlayout.widget.ConstraintLayout>