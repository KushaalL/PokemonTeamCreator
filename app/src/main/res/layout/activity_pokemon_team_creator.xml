<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonTeamCreator">

    <Button
        android:id="@+id/createTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Create Team"
        app:layout_constraintEnd_toEndOf="@+id/TeamCreator_ListViewPokemon"
        app:layout_constraintStart_toStartOf="@+id/TeamCreator_ListViewPokemon"
        app:layout_constraintTop_toBottomOf="@+id/TeamCreator_ListViewPokemon" />

    <ImageView
        android:id="@+id/TeamViewer_PokePic1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TeamViewer_TeamName"
        app:srcCompat="@drawable/pokeball"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/TeamViewer_PokePic2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TeamViewer_TeamName"
        app:srcCompat="@drawable/pokeball"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/TeamViewer_PokePic4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/TeamViewer_PokePic2"
        app:layout_constraintStart_toStartOf="@+id/TeamViewer_PokePic2"
        app:layout_constraintTop_toBottomOf="@+id/TeamViewer_PokePic2"
        app:srcCompat="@drawable/pokeball"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/TeamViewer_PokePic6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/TeamViewer_PokePic4"
        app:layout_constraintStart_toStartOf="@+id/TeamViewer_PokePic4"
        app:layout_constraintTop_toBottomOf="@+id/TeamViewer_PokePic4"
        app:srcCompat="@drawable/pokeball"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/TeamViewer_PokePic3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/TeamViewer_PokePic1"
        app:layout_constraintStart_toStartOf="@+id/TeamViewer_PokePic1"
        app:layout_constraintTop_toBottomOf="@+id/TeamViewer_PokePic1"
        app:srcCompat="@drawable/pokeball"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/TeamViewer_PokePic5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/TeamViewer_PokePic3"
        app:layout_constraintStart_toStartOf="@+id/TeamViewer_PokePic3"
        app:layout_constraintTop_toBottomOf="@+id/TeamViewer_PokePic3"
        app:srcCompat="@drawable/pokeball"
        tools:src="@tools:sample/avatars" />

    <EditText
        android:id="@+id/TeamViewer_TeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Team Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ListView
        android:id="@+id/TeamCreator_ListViewPokemon"
        android:layout_width="351dp"
        android:layout_height="170dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TeamViewer_PokePic5" />

</androidx.constraintlayout.widget.ConstraintLayout>